@model HollywoodNoticias.Domain.DTO.NoticiaDTO

@{
    ViewData["Title"] = "Details";
}

<div class="">

    <div class=" ">
        <p class="categoria-title fw-bold fs-5 ">@Model.categoria.nome</p>
        <div class="w-100 d-block p-5 titulos text-white">
            <h1>@Model.titulo</h1>
            <p class="text-noticia">@Model.descricao</p>
        </div>
    </div>

    <div class="container text-center">
        <img class="w-75 img-fluid" style="margin-top: 17em;" src="@Model.enderecoImagem"/>
    </div>

    <div class="mt-3 w-100 container lh-lg">
        <p style="text-indent: 2em;">@Model.texto</p>
    </div>

</div>


<div class="mt-5">
    <a class="btn btn-dark" asp-action="Index">Voltar para Lista</a>
</div>
