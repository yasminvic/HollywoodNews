@model IEnumerable<HollywoodNoticias.Domain.DTO.NoticiaDTO>

@{
    ViewData["Title"] = "Notícias";
}

<h1 class="main-title text-dark">Novidades de Hollywood</h1>

<section class="container mt-5">

<div class="main-content py-5 container position-relative">

@foreach(var item in Model){
        <a class="text-decoration-none text-dark p-2" asp-action="Details" asp-controller="NoticiasVisiveis" asp-route-id="@item.id">
        <div class="w-75 mb-3 mx-auto card-noticias position-relative" style="max-width: 940px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@item.enderecoImagem" class="img-fluid rounded-start w-100" alt="Notícia: @item.titulo">
            </div>
            <div class="col-md-8">
                <div class="card-body ">
                    <h5 class="card-title">@item.titulo</h5>
                    <p class="card-text text-noticia">@item.descricao</p>
                       <p class="card-text categoria-title position-absolute bottom-0 end-0 me-2"><small class="fw-bolder">@item.categoria.nome</small></p>
                </div>
            </div>
        </div>
    </div>
   </a>
        
    <hr class="w-75 container mt-3" />
}
</div>
</section>

