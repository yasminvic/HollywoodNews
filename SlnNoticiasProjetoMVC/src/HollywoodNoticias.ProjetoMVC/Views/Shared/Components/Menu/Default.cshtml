@model HollywoodNoticias.ProjetoMVC.Models.Entities.User

<div class="container-fluid">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HollywoodNoticias.ProjetoMVC</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NoticiasVisiveis" asp-action="Index">Notícias</a>
            </li>

            @if(Model.Perfil == HollywoodNoticias.ProjetoMVC.Enum.PerfilEnum.Admin)
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Configurações
                    </a>
                    <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="Categorias" asp-action="Index">Categorias</a></li>
                    <li><a class="dropdown-item" asp-controller="Noticias" asp-action="Index">Notícias</a></li>
                    </ul>
                </li>

            }

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @Model.Nome
                  <img class="w-25 me-2" src="~/img/user.png" />
              </a>
              <ul class="dropdown-menu">
                <li><a asp-controller="Login" asp-action="Sair" class="dropdown-item">Log Out</a></li>
              </ul>
        </li>
        </ul>
    </div>
</div>
