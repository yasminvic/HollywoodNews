@model IEnumerable<HollywoodNoticias.ProjetoMVC.Models.Entities.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar categoria</a>
</p>

<div class="bg-white p-2 ">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-warning"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>