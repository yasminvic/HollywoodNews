@model HollywoodNoticias.ProjetoMVC.Models.Entities.Noticia

@{
    ViewData["Title"] = "Delete";
}

<h3 class="mt-5 text-danger">Você tem certeza que deseja excluir essa notícia?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.EnderecoImagem)
        </dt>
        <dd class = "col-sm-10 mt-3">
            <img class="w-50 img-fluid" src="@Html.DisplayFor(model => model.EnderecoImagem)"/>
        </dd>
        <dt class = "col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        
        <dt class = "col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Categoria.Nome)
