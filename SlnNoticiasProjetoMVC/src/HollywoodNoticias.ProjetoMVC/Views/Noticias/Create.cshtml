@model HollywoodNoticias.Domain.DTO.NoticiaDTO

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">Adicionar Notícia</h1>
<hr />
<div class="">
    <div class="form-noticia">
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-controller="Noticias" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="categoriaId" class="control-label mt-2"></label>
                <select asp-for="categoriaId" class ="form-control" asp-items="ViewBag.categoriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="titulo" class="control-label mt-2"></label>
                <input asp-for="titulo" class="form-control" />
                <span asp-validation-for="titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricao" class="control-label mt-2"></label>
                <textarea asp-for="descricao" class="form-control"></textarea>
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="texto" class="control-label mt-2"></label>
                <textarea asp-for="texto" class="form-control"></textarea>
                <span asp-validation-for="texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="enderecoImagem" class="control-label mt-2"></label>
                <input asp-for="enderecoImagem" class="form-control" />
                <span asp-validation-for="enderecoImagem" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Adicionar" class="btn btn-primary btn-block w-100" />
            </div>
        </form>
    </div>
</div>

</div>
</div>

<div class="mt-5">
    <a class="btn btn-dark" asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
