@model HollywoodNoticias.ProjetoMVC.Models.Entities.Noticia

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">Adicionar Notícia</h1>
<hr />
<div class="">
    <div class="form-noticia">
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-controller="Noticias" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label mt-2"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label mt-2"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label mt-2"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label mt-2"></label>
               @* <textarea id="summernote" asp-for="Texto" name="editordata" class="form-control"></textarea>*@
                <textarea asp-for="Texto" class="form-control"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoImagem" class="control-label mt-2"></label>
                <input asp-for="EnderecoImagem" class="form-control" />
                <span asp-validation-for="EnderecoImagem" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block w-100" />
            </div>
        </form>
    </div>
</div>

</div>
</div>

<div class="mt-5">
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
